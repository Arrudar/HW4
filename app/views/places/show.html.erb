<h1 class="mb-4"><%= @place["name"] %></h1>

<h2>My Posts</h2>
<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4 mb-4">
      <h5><%= entry["title"] %></h5>
      <p class="text-secondary"><%= entry["occurred_on"] %></p>
      
      <div class="border d-flex align-items-center justify-content-center" style="height: 300px;">
        
      <% if entry.uploaded_image.attached? %>
        <img src="<%= url_for(entry.uploaded_image) %>" class="img-fluid">
      <% else %>
        <div class="border p-3 text-center text-muted">
          <img src="/images/No_image.jpg" class="img-fluid">
        </div>
      <% end %>
      
      </div>
      
      <p class="mt-3"><%= entry["description"] %></p>
    </div>
  <% end %>
</div>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-outline-dark mb-3">New Post</a>
</p>

<p>
  <%= link_to "Back to All Places", "/places", class: "btn btn-outline-dark mt-3" %>
</p>