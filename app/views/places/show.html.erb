<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>
<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4 mb-4">
      <h5><%= entry["title"] %></h5>
      <p class="text-secondary"><%= entry["occurred_on"] %></p>
      
      <div class="border d-flex align-items-center justify-content-center" style="height: 300px;">
        <% if entry["image"].present? %>
          <img src="<%= entry["image"] %>" class="img-fluid">
        <% else %>
          <span class="text-secondary">double-click to select image</span>
        <% end %>
      </div>
      
      <p class="mt-3"><%= entry["description"] %></p>
    </div>
  <% end %>
</div>

<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-outline-dark mb-3">New Post</a>
</p>

<p>
  <a href="/places">Back to All Places</a>
</p>